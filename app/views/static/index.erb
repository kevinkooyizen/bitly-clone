<div id = "top">
	<header id="header">
		<div id="header-inner">
			<div class ="container">
				<h1 class = "header-logo">
					<a href = "/">
						<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/84/Bit.ly_Logo.svg/1280px-Bit.ly_Logo.svg.png" width="95px" height="43px">
					</a>
				</h1>
				<nav class="navigation">
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/about">About</a></li>
					</ul>
				</nav>
			</div>
		</div>
	</header>
	<div id="main">
		<div id="main-title">
			<h1>THE LINK KNOWS NOTHING. SO CAN'T YOU.</h1>
			<p>Measure ABSOLUTELY NOTHING</p>
		</div>
		<div id="formcontainer">
			<form action = "/urls" method="post" id="shortenform">
				<input type = "text" name = "long_url" placeholder = "Paste your answer to life here" class = "shorteninginput">
				<input type = "submit" value = "SHORTEN">
			</form>
		</div>
		<div id="tablecontainer">
			<table class = "table">
			<thead class = "thead-inverse">
				<tr>
					<th>No.</th>
					<th>Long URL</th>
					<th>Short URL</th>
					<th>Click count</th>

				</tr>

				<%Url.all.order("id ASC").each_with_index do |u, index|%>
				<% index += 1 %>
				<tr>
					<td align="center">

						<%= index%>
					</td>

					<td>
						<a href="<%= "#{u.long_url}" %>"><%= u.long_url %>
							
						</a>
					</td>		
					<td>
						<a href="<%= "/#{u.short_url}" %>"><%= "localhost:9393/#{u.short_url}" %>
							
						</a>
					</td>
					<td align="center">
						<%= u.counter %>
					</td>
				<%end%>
				</tr>
			</table>
		</div>
	</div>
</div>
